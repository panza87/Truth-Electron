<h2>Create a group!</h2>

<input type="text" id="groupName" placeholder="title">
<button id="createGroup">Create</button>

<script type="text/javascript">
$(document).ready(function() {
  var createdGroup = function() {
    console.log("created group")
  }
  $("#createGroup").on("click", function(e) {
    e.preventDefault();
    groupName = $("#groupName").val();
    $.ajax({
      url: "https://glacial-depths-39385.herokuapp.com/groups",
      type: "POST",
      headers: {
          'Authorization': truthApp.jwt
      },
      data: {
        group: {
          title: groupName
        }
      }
    }).fail(function( xhr, status, errorThrown ) {
      console.log( "Sorry, there was a problem!" );
      console.log( "Error: " + errorThrown );
      console.log( "Status: " + status );
      console.dir( xhr );
    }).done(createdGroup);
    // showContent("search")
  });
})
</script>
