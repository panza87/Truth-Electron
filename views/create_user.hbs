<div class="col-sm-offset-2">
  <h1 style="margin-bottom: 30px;color:#3d4167">Sign Up</h1>
</div>

<form class="form-horizontal" id="loginForm">
  <div class="form-group">
    <label for="inputName3" class="col-sm-2 control-label">Username</label>
    <div class="col-sm-6">
      <input type="email" class="form-control" id="userName" placeholder="Username">
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-6">
      <input type="email" class="form-control" id="userEmail" placeholder="Email">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-6">
      <input type="password" class="form-control" id="userPass" placeholder="Password">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-6">
      <input type="password" class="form-control" id="userPassConfirmation" placeholder="Password Confirmation">
    </div>
  </div>
  <input type="hidden" id="appType" name="appType" value="electron">
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <button type="submit" id="createUser" class="btn btn-primary">Sign Up</button>
    </div>
  </div>
</form>

<script type="text/javascript">
  $("#createUser").on("click", function(e) {
    e.preventDefault();
    name = $("#userName").val();
    email = $("#userEmail").val();
    password = $("#userPass").val();
    passwordConfirmation = $("#userPassConfirmation").val();
    $.ajax({
      url: "https://glacial-depths-39385.herokuapp.com/users",
      type: "POST",
      data: {
        user: {
          name: name,
          email: email,
          password: password,
          password_confirmation: passwordConfirmation
        }
      }
    }).fail(function( xhr, status, errorThrown ) {
      console.log( "Sorry, there was a problem!" );
      console.log( "Error: " + errorThrown );
      console.log( "Status: " + status );
      console.dir( xhr );
    }).done(function() {
      showContent("home");
    });
    // showContent("search")
  });
</script>
